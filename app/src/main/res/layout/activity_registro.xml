<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Título de la página -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Registro de Usuario"
            android:textColor="@color/secundario"
            android:textStyle="bold"
            android:textSize="40sp"
            android:fontFamily="@font/handmade"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regtiNombre"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cursorColor="@color/secundario"
            app:hintTextColor="@color/grey"
            app:boxBackgroundColor="@color/verdeFondo"
            app:boxStrokeColor="@color/secundario"
            android:hint="Nombre (5-30 caracteres)"
            android:transitionName="animarEntrada"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regetNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de usuario -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regtiUsuario"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cursorColor="@color/secundario"
            app:hintTextColor="@color/grey"
            app:boxBackgroundColor="@color/verdeFondo"
            app:boxStrokeColor="@color/secundario"
            android:hint="Usuario (5-30 caracteres)"
            app:layout_constraintTop_toBottomOf="@+id/regetNombre">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regetUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regtiEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cursorColor="@color/secundario"
            app:hintTextColor="@color/grey"
            app:boxBackgroundColor="@color/verdeFondo"
            app:boxStrokeColor="@color/secundario"
            android:hint="Correo electrónico"
            app:layout_constraintTop_toBottomOf="@+id/regetNombre">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regetEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regtiContrasenia"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cursorColor="@color/secundario"
            app:hintTextColor="@color/grey"
            app:boxBackgroundColor="@color/verdeFondo"
            app:boxStrokeColor="@color/secundario"
            android:hint="Contraseña (6-15 caracteres)"
            app:endIconMode="password_toggle"
            app:errorIconDrawable="@null"
            app:endIconContentDescription="Toggle Password Visibility"
            app:layout_constraintTop_toBottomOf="@+id/regetNombre">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regetContrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/regtiContrasenia"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Campo de confirmar contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regtiConfirmarContrasenia"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cursorColor="@color/secundario"
            app:hintTextColor="@color/grey"
            app:boxBackgroundColor="@color/verdeFondo"
            app:boxStrokeColor="@color/secundario"
            android:hint="Confirmar contraseña"
            app:endIconMode="password_toggle"
            app:errorIconDrawable="@null"
            app:endIconContentDescription="Toggle Password Visibility"
            app:layout_constraintTop_toBottomOf="@+id/regetNombre">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regetConfirmarContrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Foto de perfil"
            android:textColor="@color/terciario"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:fontFamily="@font/bebasneue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Agrega un botón para tomar la foto de perfil -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/regbtnTomarFoto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tomar Foto"
                android:textColor="@color/secundario"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/secundario"
                app:strokeWidth="2dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/regbtnSeleccionarImagen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="Seleccionar imagen de la galería"
                android:textColor="@color/secundario"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/secundario"
                app:strokeWidth="2dp"
                android:onClick="abrirGaleria"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/regivFoto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="6dp"
            android:scaleType="fitXY"
            android:background="@color/primario"
            android:src="@drawable/usuario_default"
            android:contentDescription="Vista previa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/regbtnRegistrar"
                android:text="Registrar"
                android:textColor="@color/primario"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/secundario"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:onClick="registrar"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/regbtnCancelar"
                android:text="Cancelar"
                android:textColor="@color/primario"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/secundario"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:onClick="cancelar"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
