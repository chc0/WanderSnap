<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.usuario.datosUsuario"
    android:background="@color/primario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/perFotoPerfil"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/usuario_default2"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/secundario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/perdaLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/perFotoPerfil"
            app:layout_constraintEnd_toEndOf="@+id/perFotoPerfil"
            app:layout_constraintStart_toStartOf="@+id/perFotoPerfil"
            >

            <TextView
                android:id="@+id/perUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de Usuario"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/interphasespromono"
                android:background="@drawable/rounded_background"
                android:padding="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/perEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="usuario@example.com"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                android:fontFamily="@font/interphasespromono"
                android:background="@drawable/rounded_background"
                android:padding="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/perNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre completo"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/interphasespromono"
                android:background="@drawable/rounded_background"
                android:padding="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/perbtnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Datos"
                android:textColor="@color/secundario"
                android:layout_marginLeft="16dp"
                app:strokeColor="@color/terciario"
                android:backgroundTint="@color/terciario"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/peredLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/perFotoPerfil"
            >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="Nuevos datos"
                android:textColor="@color/secundario"
                android:textStyle="bold"
                android:textSize="40sp"
                android:fontFamily="@font/handmade"/>

            <!-- Campo de nombre -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pertiNombre"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cursorColor="@color/secundario"
                app:hintTextColor="@color/grey"
                app:boxBackgroundColor="@color/verdeFondo"
                app:boxStrokeColor="@color/secundario"
                android:hint="Nuevo nombre (5-30 caracteres)"
                android:transitionName="animarEntrada"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/peretNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pertiContrasenia"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cursorColor="@color/secundario"
                app:hintTextColor="@color/grey"
                app:boxBackgroundColor="@color/verdeFondo"
                app:boxStrokeColor="@color/secundario"
                android:hint="Nueva contraseña (6-15 caracteres)"
                app:endIconMode="password_toggle"
                app:errorIconDrawable="@null"
                app:endIconContentDescription="Toggle Password Visibility"
                app:layout_constraintTop_toBottomOf="@+id/peretEmail">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/peretContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de confirmar contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pertiConfirmarContrasenia"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cursorColor="@color/secundario"
                app:hintTextColor="@color/grey"
                app:boxBackgroundColor="@color/verdeFondo"
                app:boxStrokeColor="@color/secundario"
                android:hint="Confirmar nueva contraseña"
                app:endIconMode="password_toggle"
                app:errorIconDrawable="@null"
                app:endIconContentDescription="Toggle Password Visibility"
                app:layout_constraintTop_toBottomOf="@+id/pertiContrasenia">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/peretConfirmarContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nueva foto de perfil"
                android:textColor="@color/terciario"
                android:layout_marginTop="16dp"
                android:textSize="20dp"
                android:fontFamily="@font/bebasneue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Agrega un botón para tomar la foto de perfil -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/perbtnTomarFoto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tomar Foto"
                    android:textColor="@color/secundario"
                    android:layout_gravity="center_horizontal"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/secundario"
                    app:strokeWidth="2dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/perbtnSeleccionarImagen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="Seleccionar imagen de la galería"
                    android:textColor="@color/secundario"
                    android:layout_gravity="center_horizontal"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/secundario"
                    app:strokeWidth="2dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/perNuevaFoto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="6dp"
                android:scaleType="fitXY"
                android:background="@color/primario"
                android:src="@drawable/usuario_default"
                android:contentDescription="Vista previa"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/perbtnGuardar"
                android:text="Guardar cambios"
                android:textColor="@color/primario"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/secundario"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:onClick="subir"
                />
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
