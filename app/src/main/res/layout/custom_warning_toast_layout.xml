<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_warning_toast_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="1dp"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/naranja">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/advertencia"/>

            <TextView
                android:id="@+id/cwtText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secundario"
                android:textSize="20sp"
                android:fontFamily="@font/bebasneue"
                android:layout_marginLeft="5dp"
                android:text="Cuidado" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
